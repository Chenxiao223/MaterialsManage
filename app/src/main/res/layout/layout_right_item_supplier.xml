<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/right_item_textview0"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="所属分类"
        android:gravity="center"
        android:textSize="12dp"/>
    <TextView
        android:id="@+id/right_item_textview1"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="供应商名称"
        android:gravity="center"
        android:textSize="12dp"/>
    <TextView
        android:id="@+id/right_item_textview2"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="分管部门"
        android:gravity="center"
        android:textSize="12dp"/>
    <TextView
        android:id="@+id/right_item_textview3"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="联系方式"
        android:gravity="center"
        android:textSize="12dp"/>
    <TextView
        android:id="@+id/right_item_textview4"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="联系人"
        android:gravity="center"
        android:textSize="12dp"/>
    <TextView
        android:id="@+id/right_item_textview5"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="到货方式"
        android:gravity="center"
        android:textSize="12dp"/>
    <TextView
        android:id="@+id/right_item_textview6"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="到货仓库"
        android:gravity="center"
        android:textSize="12dp"/>

</LinearLayout>